<?xml version="1.0" encoding="utf-8"?>
<odoo>

<template id="s_cover" inherit_id="website.s_cover">
    <!-- Section -->
    <xpath expr="//section" position="attributes">
        <attribute name="class" add="oe_img_bg o_cc1 pt160 pb160" remove="parallax s_parallax_is_fixed bg-black-50 o_cc4 pt256 pb256" separator=" "/>
        <attribute name="data-scroll-background-ratio">0</attribute>
        <attribute name="data-oe-shape-data">{&quot;shape&quot;:&quot;web_editor/Floats/03&quot;,&quot;colors&quot;:{&quot;c1&quot;:&quot;#42D29B&quot;,&quot;c2&quot;:&quot;#41BFF7&quot;,&quot;c4&quot;:&quot;#42D29B&quot;,&quot;c5&quot;:&quot;#F84F51&quot;,&quot;c3&quot;:&quot;#F9BE24&quot;},&quot;flip&quot;:[],&quot;showOnMobile&quot;:false,&quot;shapeAnimationSpeed&quot;:&quot;0&quot;}</attribute>
        <attribute name="style">background-image: url('/web/image/website.s_cover_default_image'); background-position: 50% 55%;</attribute>
    </xpath>
    <!-- Filter -->
    <xpath expr="//div[hasclass('o_we_bg_filter')]" position="replace">
        <div class="o_we_bg_filter bg-white-75"/>
    </xpath>
    <!-- Shape -->
    <xpath expr="//div[hasclass('container')]" position="before">
        <div class="o_we_shape o_web_editor_Floats_03" style="background-image: url('/web_editor/shape/web_editor%2FFloats%2F03.svg?c1=%2342D29B&amp;c2=%2341BFF7&amp;c4=%2342D29B&amp;c5=%23F84F51&amp;c3=%23F9BE24');"/>
    </xpath>
    <!-- Disable Parallax -->
    <xpath expr="//span[hasclass('s_parallax_bg')]" position="replace"/>
    <!-- Title -->
    <xpath expr="//h1" position="replace" mode="inner">
        Immerse yourself <br/>in original universes
    </xpath>
    <!-- Paragraph -->
    <xpath expr="//p[hasclass('lead')]" position="replace" mode="inner">
        <br/>
    </xpath>
    <!-- Button -->
    <xpath expr="//a[hasclass('btn')]/t" position="replace" mode="inner">
        Shop Now
    </xpath>
    <xpath expr="//a[hasclass('btn')]" position="attributes">
        <attribute name="class" remove="btn-secondary" add="btn-primary btn-lg" separator=" "></attribute>
    </xpath>
    <xpath expr="//a[hasclass('btn')][2]" position="attributes">
        <attribute name="class" remove="btn-outline-secondary" add="btn-secondary btn-lg" separator=" "></attribute>
    </xpath>
</template>

</odoo>
